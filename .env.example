# Trading Configuration
TRADING_STRATEGY=RL  # Options: 'RL' (reinforcement learning), 'macd', 'rsi', 'breakout'
CHECK_INTERVAL=5  # Minutes between trading checks
TRADE_AMOUNT_USD=20.0  # Maximum USD amount per trade (used for position sizing)
CRYPTO_SYMBOLS=BTC-USD  # Comma-separated list of trading pairs (e.g., BTC-USD,ETH-USD)
LOOKBACK_DAYS=90  # Days of historical data to fetch for indicators
ENABLE_TRADING=true  # Set to false for paper trading/testing
LOG_FILE=crypto_bot.log  # Name of the log file
LOG_LEVEL=INFO  # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)

# Robinhood API Credentials (REQUIRED)
# Get these from the Robinhood Crypto API Portal (https://crypto.robinhood.com/api)
ROBINHOOD_API_KEY="YOUR_ROBINHOOD_API_KEY_HERE"  # Format: rh-api-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
ROBINHOOD_PRIVATE_KEY=your_base64_private_key_here # Base64-encoded Ed25519 private key

# OpenAI API Credentials (REQUIRED for CrewAI Agents)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE # Replace with your actual key
OPENAI_ORGANIZATION_ID=YOUR_OPENAI_ORGANIZATION_ID_HERE # Optional, replace if you use one

# RL Configuration (Required if TRADING_STRATEGY=RL)
RL_MODEL_PATH=trained_models/BTC_USD_PPO_100000steps.zip  # Path to your trained model
ENABLE_RL_MODEL=true  # Enable/disable the RL model for trading

# Web Server Configuration (Optional)
PORT=9095  # Port for the web interface
ENABLE_WEB_SERVER=true  # Enable/disable the web interface

# --- Robinhood Credentials (REQUIRED) --- 
ROBINHOOD_USERNAME=your_robinhood_username
ROBINHOOD_PASSWORD=your_robinhood_password
# ROBINHOOD_MFA_CODE=your_current_mfa_code # Only needed if MFA is enabled
